  "layout": {
    "header_component": "SiteHeader",
    "footer_component": "SiteFooter",
    "apply_to_all_pages": true,
    "disable_page_specific_headers": true,
    "disable_page_specific_footers": true,
    "sticky_header": true,
    "scroll_behavior": "smooth",
    "container_max_width": "1100px",
    "section_padding": {
      "desktop": "6rem",
      "mobile": "4rem"
    }
  },
  "routing": {
    "routes": {
      "/": "Home",
      "/assurances": "PageAssurances",
      "/pourquoi-nous": "PagePourquoiNous",
      "/faq": "PageFAQ",
      "/actualites": "PageActualites",
      "/contact": "PageContact",
      "/mentions-legales": "PageMentions",
      "/confidentialite": "PageConfidentialite"
    },
    "redirects_301": {
      "/actualite": "/actualites",
      "/assurance": "/assurances",
      "/politique-confidentialite": "/confidentialite"
    },
    "not_found": {
      "component": "Page404",
      "action": "redirect_home"
    },
    "scroll_behavior": "smooth",
    "anchor_offset": 80
  },
  "performance": {
    "images": {
      "lazy_load": true,
      "formats": ["webp", "avif", "jpg"],
      "hero_preload": true,
      "partners_logo_height": 34,
      "fade_in": true
    },
    "js": {
      "defer": true,
      "split_chunks": true
    },
    "navigation": {
      "prefetch_internal_links": "hover",
      "smooth_scroll": true,
      "anchor_offset": 80
    },
    "css": {
      "critical_css_inline": true
    },
    "animations": {
      "default_duration": "300ms",
      "easing": "ease-out",
      "reduce_motion_respect": true,
      "page_transitions": {
        "type": "fade+slide",
        "direction": "up"
      },
      "elements": {
        "buttons_hover": {
          "scale": 1.04,
          "shadow": true
        },
        "cards_hover": {
          "lift": true,
          "shadow": "0 8px 20px rgba(0,0,0,0.08)"
        }
      },
      "partners_carousel": {
        "direction": "left",
        "speed": "slow",
        "infinite": true,
        "pause_on_hover": true
      }
    }
  },
